{
  "ConnectionStrings": {
    "TaskTracker": "Host=localhost;Database=tasktracker;Username=tasktracker;Password=tasktracker123"
  },
  "JwtSettings": {
    "SecretKey": "ThisIsAVeryLongSecretKeyForJWTTokenGeneration123456789",
    "Issuer": "TaskTracker.Api",
    "Audience": "TaskTracker.Client",
    "ExpiryMinutes": 60
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {CorrelationId} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext"]
  },
  "AllowedHosts": "*"
}