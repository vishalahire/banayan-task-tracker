# infra/Dockerfile.web
# Multi-stage build for TaskTracker.Web (React + Vite + TypeScript)

# Build stage
FROM node:18-alpine AS build
WORKDIR /app

# Copy package files
COPY src/TaskTracker.Web/package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY src/TaskTracker.Web/ ./

# Set build-time environment variable (will be overridden by docker-compose)
ARG VITE_API_BASE_URL=http://localhost:5000
ENV VITE_API_BASE_URL=$VITE_API_BASE_URL

# Build the application
RUN npm run build

# Runtime stage - serve with nginx
FROM nginx:alpine AS runtime

# Copy built files to nginx html directory
COPY --from=build /app/dist /usr/share/nginx/html

# Create nginx configuration for SPA routing
RUN echo 'server { \
    listen 3000; \
    server_name localhost; \
    root /usr/share/nginx/html; \
    index index.html; \
    \
    # Handle client-side routing \
    location / { \
        try_files $uri $uri/ /index.html; \
    } \
    \
    # Security headers \
    add_header X-Frame-Options "SAMEORIGIN" always; \
    add_header X-XSS-Protection "1; mode=block" always; \
    add_header X-Content-Type-Options "nosniff" always; \
}' > /etc/nginx/conf.d/default.conf

# Expose port
EXPOSE 3000

# Start nginx
CMD ["nginx", "-g", "daemon off;"]